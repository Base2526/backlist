function mongo_content(EntityInterface $entity){
  try{

    $nid        = $entity->id();

    if(empty($nid)){
      return;
    }

    $db = Utils::MongoDB()->bl;

    $bundle = 'contents';
    $collections = $db->listCollections();
    $collectionNames = [];
    foreach ($collections as $collection) {
      $collectionNames[] = $collection->getName();
    }
  
    $exists = in_array($bundle, $collectionNames);
  
    if(!$exists){
      $collection = $db->createCollection($bundle);
      if($collection->ok){
        dpm( "OK");
      }
    }
  
    $mg_content = $db->contents;
    
    $filter     = array( 'nid' => $nid );


    $flag = 0;

    if (!$entity->isNew()) {
      if($mg_content->count($filter)){
        $flag = 3;
      }else{
        $flag = 2;
      }
    }else{
      $flag =1;
    }

    switch($flag){
      case 1:
      case 2:{
          $document = Utils::mongo_node_contents($entity);
          if($mg_content->count($filter)){
            $mg_content->updateOne( [ 'nid' => $nid ], [ '$set' => $document ] );
          }else{
            $document["nid"] = $nid;
            $mg_content->insertOne($document);
          }
        break;
      }

      case 3:{

        $set = array();

        $original_label  = $entity->original->label();
        $updated_label   = $entity->label();
        if ($original_label != $updated_label) {
          $set['title'] = $updated_label;
