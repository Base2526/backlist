        if ($original_merchant_bank_account != $updated_merchant_bank_account) {
          // original
          $original_mba = array();
          foreach ($original_merchant_bank_account as $mi=>$mv){
            $tmp = array();
            $p = Paragraph::load( $mv['target_id'] );
            
            // เลขบัญชี
