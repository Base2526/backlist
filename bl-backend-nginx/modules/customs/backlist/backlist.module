function backlist_user_presave(EntityInterface $entity) {
  try{
    if (!$entity->isNew()) {
      $flag = 0;

      $original_email  = $entity->original->get('mail')->value;
      $updated_email   = $entity->get('mail')->value;
      if ($original_email != $updated_email) {
        $flag = 1;
      }

      /*
        recheck อีกทีทำไหม ทุกครั้ง ที login original, current pass ไม่เท่ากัน
      */
      // $original_pass   = $entity->original->get('pass')->value;
      // $updated_pass    = $entity->get('pass')->value;
      // if ($original_pass != $updated_pass) {
      //   $flag = 2;
      // }

      $original_display_name   = $entity->original->get('field_display_name')->value;
      $updated_display_name    = $entity->get('field_display_name')->value;
      if ($original_display_name != $updated_display_name) {
        $flag = 3;
      }

      try{
        $original_user_picture  = $entity->original->get('user_picture')->entity;
        $updated_user_picture   = $entity->get('user_picture')->entity;
        if ($original_user_picture != $updated_user_picture) {
          $flag = 4;
        }
      } catch (\Throwable $e) {
        \Drupal::logger('backlist_user_presave')->error($e->__toString());
      }

      $original_gender  = $entity->original->get('field_gender')->getValue();
      $updated_gender   = $entity->get('field_gender')->getValue();
      if ($original_gender != $updated_gender) {
        $flag = 5;
      }

      $original_type_login = $entity->original->get('field_type_login')->getValue();
      $updated_type_login  = $entity->get('field_type_login')->getValue();
      if ($original_type_login != $updated_type_login) {
        $flag = 6;
      }

      if($flag){
        user_iu($entity);
        \Drupal::logger('backlist_user_presave')->notice('Update @flag', array('@flag'=>$flag));
      }
    }else{
      \Drupal::logger('backlist_user_presave')->notice('new');
    }

  } catch (\Throwable $e) {
    \Drupal::logger('backlist_user_presave')->error($e->__toString());
  }
}

function user_iu(EntityInterface $entity){
  $db = Utils::MongoDB()->bl;

  $bundle = 'users';
  $collections = $db->listCollections();
  $collectionNames = [];
  foreach ($collections as $collection) {
    $collectionNames[] = $collection->getName();
  }

  $exists = in_array($bundle, $collectionNames);

  if(!$exists){
    $collection = $db->createCollection($bundle);
    if($collection->ok){
      dpm( "OK");
    }
  }

  $users = $db->users;
  $filter = array('uid' => $entity->id() );

  $email   = $entity->getEmail();
  $pass    = $entity->getPassword();
  
  $name = "";
  $field_display_name = $entity->get('field_display_name')->getValue();
  if(!empty($field_display_name)){
    $name = $field_display_name[0]['value'];
  }
  $image_url = "";  
  if (!$entity->get('user_picture')->isEmpty()) {
    $image_url = file_create_url($entity->get('user_picture')->entity->getFileUri());
  }

  $gender  = 0;
  $field_gender = $entity->get('field_gender')->getValue();
  if(!empty($field_gender)){
    $gender  = $field_gender[0]['target_id'];
  }

  $type_login = 0;
  $field_type_login = $entity->get('field_type_login')->getValue();
  if(!empty($field_type_login)){
    $type_login  = $field_type_login[0]['target_id'];
  }

  if($users->count($filter)){
    $users->updateOne(
                    [ 'uid' => $entity->id() ],
                    [ '$set' => ['email'=>$email, "name" => $name, "pass"=>$pass, "image_url"=>$image_url, "gender"=>$gender, "type_login"=>$type_login ]]
                    );
  }else{
    $document = array( 
      "uid"     => $entity->id(), 
      'email'   => $email,
      "name"    => $name,
      "pass"    => $pass,
      "image_url"=>$image_url,
      "gender"  =>$gender,
      "type_login"=>$type_login
    );
    $users->insertOne($document);
  }

  // ------- Clear cache for nodejs--------
  // Utils::nodejs_clear_cache_with_keys(array( 'user-'.$entity->id() ));
  // ------- Clear cache for nodejs--------
}

