            $original_mba[] = $tmp;
          }
          // original

          // updated
          $updated_mba = array();
          foreach ($updated_merchant_bank_account as $mi=>$mv){
            $tmp = array();
            $p = Paragraph::load( $mv['target_id'] );
            
            // เลขบัญชี
            $field_bank_account = $p->get('field_bank_account')->getValue();
            if(!empty($field_bank_account)){
